<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="100dp" android:layout_margin="5dp">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout android:layout_width="100dp" android:layout_height="20dp"
            android:orientation="horizontal"

        >

            <TextView android:id="@+id/tv1" android:layout_width="30dp" android:layout_height="20dp"
                android:paddingLeft="10dp" android:text="@string/stn" android:textStyle="bold" />

            <TextView android:id="@+id/stationOutput" android:layout_width="150dp"
                android:layout_height="20dp" android:paddingLeft="10dp" android:text="Output"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout android:layout_width="150dp" android:layout_height="20dp"
            android:orientation="horizontal">
            <TextView android:id="@+id/tv2" android:layout_width="30dp" android:layout_height="20sp"
                android:paddingLeft="10dp" android:text="Sch: " android:textStyle="bold" />
            <TextView android:id="@+id/outputSchedule" android:layout_width="30dp"
                android:layout_height="20dp" android:paddingLeft="10dp" android:text="Output"
                android:textStyle="bold" />
            <TextView android:id="@+id/tv3" android:layout_width="40dp" android:layout_height="20dp"
                android:paddingLeft="10dp" android:text="Actual: " android:textStyle="bold" />
            <TextView android:id="@+id/outputActual" android:layout_width="50dp"
                android:layout_height="20sp" android:paddingLeft="10dp" android:text="Output"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout android:layout_width="180dp" android:layout_height="20sp"
            android:orientation="horizontal">

            <TextView android:id="@+id/tv4" android:layout_width="40dp" android:layout_height="20sp"
                android:paddingLeft="10dp" android:text="Arrived: " android:textStyle="bold" />
            <TextView android:id="@+id/outputArrived" android:layout_width="30dp"
                android:layout_height="20sp" android:paddingLeft="10dp" android:text="Output"
                android:textStyle="bold" />
            <TextView android:id="@+id/tv5" android:layout_width="60dp" android:layout_height="20sp"
                android:layout_toEndOf="@+id/outputArrived"
                android:layout_toRightOf="@+id/outputArrived" android:paddingLeft="10dp"
                android:text="Departed: " android:textStyle="bold" />
            <TextView android:id="@+id/outputDeparted" android:layout_width="30dp"
                android:layout_height="20sp" android:layout_toEndOf="@+id/tv5"
                android:layout_toRightOf="@+id/tv5" android:paddingLeft="10dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

